# EditorConfig helps maintain consistent coding styles
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{env,env.*}]
insert_final_newline = false
trim_trailing_whitespace = false

[*.sh]
indent_size = 2
shell = bash

[*.ps1]
indent_size = 4

[*.json]
indent_size = 2
